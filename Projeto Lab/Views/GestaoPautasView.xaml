<UserControl x:Class="Projecto_Lab.Views.GestaoPautasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Estilo para Cards de Estatística -->
        <Style x:Key="UltraStatCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#EAEAEA"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="6" Opacity="0.1" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-3"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="10" Opacity="0.12" BlurRadius="30"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para Cards de Conteúdo -->
        <Style x:Key="UltraContentCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#EAEAEA"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="6" Opacity="0.1" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para Botões de Ação -->
        <Style x:Key="UltraActionButton" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.3" BlurRadius="15"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-2"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="6" Opacity="0.4" BlurRadius="20"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border BorderThickness="0,5,0,0" Padding="10,10,0,30">
                <TextBlock Text="Gestão de Pautas" 
               FontSize="28" FontWeight="Bold" 
               Foreground="#2C3E50"/>
            </Border>

            <!-- Dashboard Statistics -->
            <Border Grid.Row="1" Margin="0,0,0,30" Padding="30" CornerRadius="12">
                <Border.Background>
                    <SolidColorBrush Color="#FAFAFE"/>
                </Border.Background>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total de Alunos -->
                    <Border Grid.Column="0" Style="{StaticResource UltraStatCard}" Margin="0,0,10,0">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="#1976D2"/>
                        </Border.BorderBrush>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#E8F4FD" Offset="0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="👥" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock x:Name="tbTotalAlunos" Text="25" FontSize="38" FontWeight="Bold" 
                                       Foreground="#1976D2" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                            <TextBlock Text="TOTAL ALUNOS" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="#666" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Alunos Avaliados -->
                    <Border Grid.Column="1" Style="{StaticResource UltraStatCard}" Margin="5,0">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="#388E3C"/>
                        </Border.BorderBrush>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#E8F5E8" Offset="0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="✅" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock x:Name="tbAlunosAvaliados" Text="18" FontSize="38" FontWeight="Bold" 
                                       Foreground="#388E3C" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                            <TextBlock Text="AVALIADOS" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="#666" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Por Avaliar -->
                    <Border Grid.Column="2" Style="{StaticResource UltraStatCard}" Margin="5,0">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="#F57C00"/>
                        </Border.BorderBrush>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FFF3E0" Offset="0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="⏳" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock x:Name="tbPorAvaliar" Text="7" FontSize="38" FontWeight="Bold" 
                                       Foreground="#F57C00" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                            <TextBlock Text="POR AVALIAR" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="#666" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Média Geral -->
                    <Border Grid.Column="3" Style="{StaticResource UltraStatCard}" Margin="10,0,0,0">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="#7065F0"/>
                        </Border.BorderBrush>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#F3F2FF" Offset="0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="📈" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock x:Name="tbMediaGeral" Text="14.2" FontSize="38" FontWeight="Bold" 
                                       Foreground="#7065F0" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                            <TextBlock Text="MÉDIA GERAL" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="#666" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Tabela de Pautas -->
            <Border Grid.Row="2" Style="{StaticResource UltraContentCard}" Margin="0,0,0,30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header da Tabela -->
                    <Border Grid.Row="0" CornerRadius="12,12,0,0" Padding="25,20">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#F8F9FA" Offset="0"/>
                                <GradientStop Color="#E9ECEF" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" FontSize="18" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="Pauta de Avaliações - Matriz de Notas" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="#495057" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- ScrollViewer Horizontal para a Tabela -->
                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <DataGrid x:Name="dgPautas" 
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False" CanUserDeleteRows="False"
                                  CanUserReorderColumns="False" CanUserResizeRows="False"
                                  CanUserSortColumns="True"
                                  GridLinesVisibility="None"
                                  HeadersVisibility="Column"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  RowHeight="50"
                                  ColumnHeaderHeight="45"
                                  MinWidth="800"
                                  Margin="0">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#F8F9FA" Offset="0"/>
                                                <GradientStop Color="#E9ECEF" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="BorderThickness" Value="0,0,1,2"/>
                                    <Setter Property="BorderBrush" Value="#EAEAEA"/>
                                    <Setter Property="Padding" Value="15,0"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="Foreground" Value="#495057"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#F0F0F0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#FAFAFE" Offset="0"/>
                                                        <GradientStop Color="#F8F9FA" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                    <Setter Property="BorderBrush" Value="#F0F0F0"/>
                                    <Setter Property="Padding" Value="12,0"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.Columns>
                                <!-- Coluna Nome -->
                                <DataGridTemplateColumn Header="👤 Aluno" Width="200" CanUserSort="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                <Border Background="#E8F4FD" CornerRadius="20" Width="32" Height="32" Margin="0,0,10,0">
                                                    <TextBlock Text="{Binding Iniciais}" FontSize="12" FontWeight="Bold" 
                                                               Foreground="#1976D2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <TextBlock Text="{Binding NomeCompleto}" FontSize="14" FontWeight="Medium" 
                                                           Foreground="#495057" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Coluna Grupo -->
                                <DataGridTemplateColumn Header="👥 Grupo" Width="120" CanUserSort="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="#F8F9FA" CornerRadius="12" Padding="8,4" HorizontalAlignment="Center">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding IconeGrupo}" FontSize="12" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding NomeGrupo}" FontSize="12" FontWeight="SemiBold" 
                                                               Foreground="#495057" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- Nota Final (destacada) -->
                                <DataGridTemplateColumn Header="🏆 FINAL" Width="90" CanUserSort="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="12" Padding="12,8" HorizontalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding StatusFinal}" Value="Aprovado">
                                                                <Setter Property="Background">
                                                                    <Setter.Value>
                                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                            <GradientStop Color="#D4EDDA" Offset="0"/>
                                                                            <GradientStop Color="#C8E6C9" Offset="1"/>
                                                                        </LinearGradientBrush>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Setter Property="BorderBrush" Value="#28A745"/>
                                                                <Setter Property="BorderThickness" Value="2"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding StatusFinal}" Value="Reprovado">
                                                                <Setter Property="Background">
                                                                    <Setter.Value>
                                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                            <GradientStop Color="#F8D7DA" Offset="0"/>
                                                                            <GradientStop Color="#F5C6CB" Offset="1"/>
                                                                        </LinearGradientBrush>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Setter Property="BorderBrush" Value="#DC3545"/>
                                                                <Setter Property="BorderThickness" Value="2"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding StatusFinal}" Value="SemNota">
                                                                <Setter Property="Background" Value="#F1F3F4"/>
                                                                <Setter Property="BorderBrush" Value="#DDD"/>
                                                                <Setter Property="BorderThickness" Value="2"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="14" FontWeight="Bold" HorizontalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding StatusFinal}" Value="Aprovado">
                                                                    <Setter Property="Text" Value="{Binding NotaFinal}"/>
                                                                    <Setter Property="Foreground" Value="#155724"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding StatusFinal}" Value="Reprovado">
                                                                    <Setter Property="Text" Value="{Binding NotaFinal}"/>
                                                                    <Setter Property="Foreground" Value="#721C24"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding StatusFinal}" Value="SemNota">
                                                                    <Setter Property="Text" Value="—"/>
                                                                    <Setter Property="Foreground" Value="#999"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Histograma Section -->
            <Border Grid.Row="3" Style="{StaticResource UltraContentCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header do Histograma -->
                    <Border Grid.Row="0" CornerRadius="12,12,0,0" Padding="25,20">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#F8F9FA" Offset="0"/>
                                <GradientStop Color="#E9ECEF" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="18" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="Distribuição de Notas - Histograma" FontSize="16" FontWeight="SemiBold" 
                                           Foreground="#495057" VerticalAlignment="Center"/>
                            </StackPanel>

                            <Button Grid.Column="1" x:Name="btnAmpliarGrafico" 
                                    Style="{StaticResource UltraActionButton}"
                                    Content="🔍 Ampliar Gráfico" 
                                    Click="BtnAmpliarGrafico_Click">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#7065F0" Offset="0"/>
                                        <GradientStop Color="#667eea" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Mini Histograma -->
                    <!-- Mini Histograma DINÂMICO -->
                    <Grid Grid.Row="1" Margin="25" Height="200" x:Name="HistogramaGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 0-2 -->
                        <Grid Grid.Column="0" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border x:Name="borderHist0" Grid.Row="0" VerticalAlignment="Bottom" Height="5" CornerRadius="4,4,0,0" Margin="4,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                        <GradientStop Color="#DC3545" Offset="0"/>
                                        <GradientStop Color="#FF6B7A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <TextBlock x:Name="tbHist0" Grid.Row="1" Text="0" FontSize="12" FontWeight="Bold" 
                                       Foreground="#DC3545" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                            <TextBlock Grid.Row="2" Text="0-2" FontSize="10" 
                                       Foreground="#666" HorizontalAlignment="Center"/>
                        </Grid>

                        <!-- 3-5 -->
                        <Grid Grid.Column="1" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border x:Name="borderHist1" Grid.Row="0" VerticalAlignment="Bottom" Height="5" CornerRadius="4,4,0,0" Margin="4,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                        <GradientStop Color="#DC3545" Offset="0"/>
                                        <GradientStop Color="#FF6B7A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <TextBlock x:Name="tbHist1" Grid.Row="1" Text="0" FontSize="12" FontWeight="Bold" 
                                       Foreground="#DC3545" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                            <TextBlock Grid.Row="2" Text="3-5" FontSize="10" 
                                       Foreground="#666" HorizontalAlignment="Center"/>
                        </Grid>

                        <!-- 6-8 -->
                        <Grid Grid.Column="2" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border x:Name="borderHist2" Grid.Row="0" VerticalAlignment="Bottom" Height="5" CornerRadius="4,4,0,0" Margin="4,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                        <GradientStop Color="#DC3545" Offset="0"/>
                                        <GradientStop Color="#FF6B7A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <TextBlock x:Name="tbHist2" Grid.Row="1" Text="0" FontSize="12" FontWeight="Bold" 
                                       Foreground="#DC3545" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                            <TextBlock Grid.Row="2" Text="6-8" FontSize="10" 
                                       Foreground="#666" HorizontalAlignment="Center"/>
                        </Grid>

                        <!-- 9 -->
                        <Grid Grid.Column="3" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border x:Name="borderHist3" Grid.Row="0" VerticalAlignment="Bottom" Height="5" CornerRadius="4,4,0,0" Margin="4,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                        <GradientStop Color="#DC3545" Offset="0"/>
                                        <GradientStop Color="#FF6B7A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <TextBlock x:Name="tbHist3" Grid.Row="1" Text="0" FontSize="12" FontWeight="Bold" 
                                       Foreground="#DC3545" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                            <TextBlock Grid.Row="2" Text="9" FontSize="10" 
                                       Foreground="#666" HorizontalAlignment="Center"/>
                        </Grid>

                        <!-- 10-11 -->
                        <Grid Grid.Column="4" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border x:Name="borderHist4" Grid.Row="0" VerticalAlignment="Bottom" Height="5" CornerRadius="4,4,0,0" Margin="4,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                        <GradientStop Color="#28A745" Offset="0"/>
                                        <GradientStop Color="#4CAF50" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <TextBlock x:Name="tbHist4" Grid.Row="1" Text="0" FontSize="12" FontWeight="Bold" 
                                       Foreground="#28A745" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                            <TextBlock Grid.Row="2" Text="10-11" FontSize="10" 
                                       Foreground="#666" HorizontalAlignment="Center"/>
                        </Grid>

                        <!-- 12-13 -->
                        <Grid Grid.Column="5" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border x:Name="borderHist5" Grid.Row="0" VerticalAlignment="Bottom" Height="5" CornerRadius="4,4,0,0" Margin="4,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                        <GradientStop Color="#28A745" Offset="0"/>
                                        <GradientStop Color="#4CAF50" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <TextBlock x:Name="tbHist5" Grid.Row="1" Text="0" FontSize="12" FontWeight="Bold" 
                                       Foreground="#28A745" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                            <TextBlock Grid.Row="2" Text="12-13" FontSize="10" 
                                       Foreground="#666" HorizontalAlignment="Center"/>
                        </Grid>

                        <!-- 14-15 -->
                        <Grid Grid.Column="6" Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

