<UserControl x:Class="Projecto_Lab.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <!-- Dashboard tem o seu próprio background branco -->
    <Border Background="White" 
            CornerRadius="12"
            Margin="20">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Cabeçalho -->
            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="Dashboard" 
                           FontSize="28" 
                           FontWeight="SemiBold" 
                           Foreground="#333333"
                           Margin="0,0,0,10"/>
                <!-- Nome dinâmico do utilizador -->
                <TextBlock x:Name="lblBoasVindas"
                           Text="Bem-vindo Luís Almeida ao sistema de gestão de avaliações" 
                           FontSize="16" 
                           Foreground="#666666"/>
            </StackPanel>

            <!-- Cards de Estatísticas -->
            <Grid Grid.Row="1" Margin="0,0,0,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="205"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*" MinWidth="205"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*" MinWidth="205"/>
                </Grid.ColumnDefinitions>

                <!-- Card Total de Alunos -->
                <Border Grid.Column="0" 
                        Background="#7065F0" 
                        CornerRadius="12" 
                        Padding="25,20"
                        MinWidth="205"
                        MinHeight="130">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Total de Alunos" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>

                        <TextBlock x:Name="lblTotalAlunos"
                                   Text="0" 
                                   Foreground="White" 
                                   FontSize="36" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Card Tarefas Ativas -->
                <Border Grid.Column="2" 
                        Background="#5D9CEC" 
                        CornerRadius="12" 
                        Padding="25,20"
                        MinWidth="205"
                        MinHeight="130">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Tarefas Ativas" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>

                        <TextBlock x:Name="lblTarefasAtivas"
                                   Text="0" 
                                   Foreground="White" 
                                   FontSize="36" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Card Grupos Formados -->
                <Border Grid.Column="4" 
                        Background="#48CFAD" 
                        CornerRadius="12" 
                        Padding="25,20"
                        MinWidth="205"
                        MinHeight="130">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Grupos Formados" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>

                        <TextBlock x:Name="lblTotalGrupos"
                                   Text="0" 
                                   Foreground="White" 
                                   FontSize="36" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Atividades Recentes -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="205"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*" MinWidth="205"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*" MinWidth="205"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.ColumnSpan="5">
                    <TextBlock Text="Atividades Recentes" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="#333333"
                               Margin="0,0,0,20"/>

                    <!-- Lista dinâmica de atividades -->
                    <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="lstAtividadesRecentes">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F7F7FD" 
                                            CornerRadius="8" 
                                            Padding="20"
                                            Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Ícone -->
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Icone}" 
                                                       FontSize="16"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,15,0"/>

                                            <!-- Descrição -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Descricao}" 
                                                           FontSize="14" 
                                                           FontWeight="SemiBold"
                                                           Foreground="#333333"/>
                                                <TextBlock Text="{Binding TempoRelativo}" 
                                                           FontSize="12" 
                                                           Foreground="#999999"
                                                           Margin="0,5,0,0"/>
                                            </StackPanel>

                                            <!-- Hora -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding DataFormatada}" 
                                                       FontSize="12" 
                                                       Foreground="#666666"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Mensagem quando não há atividades -->
                    <Border x:Name="borderSemAtividades"
                            Background="#F7F7FD" 
                            CornerRadius="8" 
                            Padding="40"
                            Visibility="Visible">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="📋" 
                                       FontSize="32" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Ainda não há atividades recentes" 
                                       FontSize="14" 
                                       Foreground="#666666"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="As atividades aparecerão aqui conforme usar o sistema" 
                                       FontSize="12" 
                                       Foreground="#999999"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>