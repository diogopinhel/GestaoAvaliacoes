<Window x:Class="Projecto_Lab.Views.NovaTarefaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gestão Tarefas - Nova Tarefa" 
        Height="620" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F7F7FD">

    <Window.Resources>
        <!-- Estilo para os botões -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para os TextBox -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#EAEAEA"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para os DatePicker -->
        <Style x:Key="RoundedDatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#EAEAEA"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="15" Margin="15">
        <Grid Margin="20,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <Border Grid.Row="0" Background="#7065F0" CornerRadius="6" Margin="0,0,0,15">
                <TextBlock Text="Nova Tarefa" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="White"
                           Margin="15,10"/>
            </Border>

            <!-- Título da Tarefa -->
            <TextBlock Grid.Row="1" 
                       Text="Título:" 
                       Margin="0,0,0,5"/>
            <TextBox Grid.Row="2" 
                     x:Name="tbTitulo" 
                     Style="{StaticResource RoundedTextBox}" 
                     Margin="0,0,0,15"/>

            <!-- Descrição -->
            <TextBlock Grid.Row="3" 
                       Text="Descrição:" 
                       Margin="0,0,0,5"/>
            <TextBox Grid.Row="4" 
                     x:Name="tbDescricao" 
                     Style="{StaticResource RoundedTextBox}" 
                     Height="70"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalContentAlignment="Top"
                     Padding="10"
                     Margin="0,0,0,15"/>

            <!-- Data/Hora Início -->
            <TextBlock Grid.Row="5" Text="Data de Início:" Margin="0,0,0,5"/>
            <Grid Grid.Row="6" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <DatePicker Grid.Column="0"
                            x:Name="dpInicio"
                            Style="{StaticResource RoundedDatePicker}"
                            Margin="0,0,10,0"
                            Text="Selecione a data"/>
                <TextBox Grid.Column="1"
                         x:Name="tbHoraInicio"
                         Style="{StaticResource RoundedTextBox}"
                         Text="00:00"/>
            </Grid>

            <!-- Data/Hora Fim -->
            <TextBlock Grid.Row="7" Text="Data de Fim:" Margin="0,0,0,5"/>
            <Grid Grid.Row="8" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <DatePicker Grid.Column="0"
                            x:Name="dpFim"
                            Style="{StaticResource RoundedDatePicker}"
                            Margin="0,0,10,0"
                            Text="Selecione a data"/>
                <TextBox Grid.Column="1"
                         x:Name="tbHoraFim"
                         Style="{StaticResource RoundedTextBox}"
                         Text="23:59"/>
            </Grid>

            <!-- Peso -->
            <TextBlock Grid.Row="9" 
                       Text="Peso (%):" 
                       Margin="0,0,0,5"/>
            <Grid Grid.Row="10" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" 
                         x:Name="tbPeso" 
                         Style="{StaticResource RoundedTextBox}"
                         Text="10"/>
                <TextBlock Grid.Column="1" 
                           Text="%" 
                           VerticalAlignment="Center" 
                           Margin="5,0,0,0" 
                           FontSize="14"/>
            </Grid>

            <!-- Botões -->
            <Grid Grid.Row="11" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Botão Cancelar -->
                <Button Grid.Column="0" 
                        Content="Cancelar" 
                        Style="{StaticResource ActionButton}" 
                        Background="#E0E0E0" 
                        Foreground="Black" 
                        Margin="0,0,5,0" 
                        Click="BtnCancelar_Click"/>

                <!-- Botão Adicionar -->
                <Button Grid.Column="1" 
                        Content="Adicionar" 
                        Style="{StaticResource ActionButton}" 
                        Background="#7065F0" 
                        Margin="5,0,0,0" 
                        Click="BtnAdicionar_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>