<Window x:Class="Projecto_Lab.Views.EditarTarefaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gestão Tarefas - Editar Tarefa" 
        Height="700" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F7F7FD">

    <Window.Resources>
        <!-- Estilo para os botões -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para os TextBox -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#EAEAEA"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para os DatePicker -->
        <Style x:Key="RoundedDatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#EAEAEA"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="15" Margin="15">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <Border Grid.Row="0" Background="#7065F0" CornerRadius="6" Margin="0,0,0,20">
                <TextBlock Text="Editar Tarefa" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="White"
                           Margin="15,10"/>
            </Border>

            <!-- ID da Tarefa (Somente Leitura) -->
            <TextBlock Grid.Row="1" 
                       Text="ID:" 
                       Margin="0,0,0,5"/>
            <TextBox Grid.Row="2" 
                     x:Name="tbId" 
                     Style="{StaticResource RoundedTextBox}" 
                     Margin="0,0,0,15"
                     IsReadOnly="True"/>

            <!-- Título da Tarefa -->
            <TextBlock Grid.Row="3" 
                       Text="Título:" 
                       Margin="0,0,0,5"/>
            <TextBox Grid.Row="4" 
                     x:Name="tbTitulo" 
                     Style="{StaticResource RoundedTextBox}" 
                     Margin="0,0,0,15"/>

            <!-- Descrição -->
            <TextBlock Grid.Row="5" 
                       Text="Descrição:" 
                       Margin="0,0,0,5"/>
            <TextBox Grid.Row="6" 
                     x:Name="tbDescricao" 
                     Style="{StaticResource RoundedTextBox}" 
                     Height="80"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalContentAlignment="Top"
                     Padding="10"
                     Margin="0,0,0,15"/>

            <!-- Data/Hora Início -->
            <TextBlock Grid.Row="7" 
                       Text="Data de Início:" 
                       Margin="0,0,0,5"/>
            <Grid Grid.Row="8" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <DatePicker Grid.Column="0" 
                           x:Name="dpInicio" 
                           Style="{StaticResource RoundedDatePicker}" 
                           Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" 
                         x:Name="tbHoraInicio" 
                         Style="{StaticResource RoundedTextBox}"/>
            </Grid>

            <!-- Data/Hora Fim -->
            <TextBlock Grid.Row="9" 
                       Text="Data de Fim:" 
                       Margin="0,0,0,5"/>
            <Grid Grid.Row="10" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <DatePicker Grid.Column="0" 
                           x:Name="dpFim" 
                           Style="{StaticResource RoundedDatePicker}" 
                           Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" 
                         x:Name="tbHoraFim" 
                         Style="{StaticResource RoundedTextBox}"/>
            </Grid>

            <!-- Peso -->
            <TextBlock Grid.Row="10" 
                       Text="Peso (%):" 
                       Margin="0,50,0,0" Grid.RowSpan="2"/>
            <Grid Grid.Row="11" Margin="0,1,0,0" Height="70" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="233*"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" 
                         x:Name="tbPeso" 
                         Style="{StaticResource RoundedTextBox}" Margin="0,18,0,16"/>
                <TextBlock Grid.Column="1" 
                           Text="%" 
                           VerticalAlignment="Top" 
                           Margin="5,24,0,0" 
                           FontSize="14" Grid.ColumnSpan="2"/>
            </Grid>

            <!-- Botões -->
            <Grid Grid.Row="12" Margin="0,7,0,13">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Botão Cancelar -->
                <Button Grid.Column="0" 
                        Content="Cancelar" 
                        Style="{StaticResource ActionButton}" 
                        Background="#E0E0E0" 
                        Foreground="Black" 
                        Margin="0,0,5,0" 
                        Click="BtnCancelar_Click"/>

                <!-- Botão Salvar -->
                <Button Grid.Column="1" 
                        Content="Salvar" 
                        Style="{StaticResource ActionButton}" 
                        Background="#7065F0" 
                        Margin="5,0,0,0" 
                        Click="BtnSalvar_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>